<script>
      

        $('#count').hide();
        var slCart = document.getElementById("count").innerText;
        localStorage.setItem("count",slCart);
        document.getElementById("slcart").innerText =slCart;
        $('#userid').hide();
        $('#useridF').hide();
        
        document.getElementById('useridF').value= localStorage.getItem("userid");

        var srcA = document.getElementById("imga").src; 
        console.log(srcA);
        var srcB = document.getElementById("imgb").src;
        var srcC = document.getElementById("imgc").src;
        var imgsrc=document.getElementById("imgMain").src;
        document.getElementById("imga").addEventListener('click', function(e) {
          e.preventDefault();
          document.getElementById('imga').classList.add('borderImg');
          document.getElementById('imgb').classList.remove('borderImg');
          document.getElementById('imgc').classList.remove('borderImg');
          document.getElementById("imgMain").src=srcA;
          imgsrc = document.getElementById("imgMain").src;
        })
        document.getElementById("imgb").addEventListener('click', function(e) {
          e.preventDefault();
          document.getElementById('imga').classList.remove('borderImg');
          document.getElementById('imgb').classList.add('borderImg');
          document.getElementById('imgc').classList.remove('borderImg');
          document.getElementById("imgMain").src=srcB;
          imgsrc = document.getElementById("imgMain").src;
        })
        document.getElementById("imgc").addEventListener('click', function(e) {
          e.preventDefault();
          document.getElementById('imga').classList.remove('borderImg');
          document.getElementById('imgb').classList.remove('borderImg');
          document.getElementById('imgc').classList.add('borderImg');
          document.getElementById("imgMain").src=srcC;
          imgsrc = document.getElementById("imgMain").src;
        })

        var radio = document.getElementsByName('customRadioInline1');
       
        radio.forEach((item) => {
          item.addEventListener('click', function(e) {
              localStorage.setItem('size', item.value);
          })
        })
        
       function card(){
          var price = document.getElementById('price').innerHTML;
          var name = document.getElementById('name').innerHTML;
          var sltonkho =document.getElementById('quantity').innerHTML;
          var size=localStorage.getItem('size');

          var slorder =$('#quantityOrder').val();
          var slKho = parseInt(sltonkho - slorder);

          if(sltonkho < slorder || slKho < 0){
            alert("Số lượng không đủ")
          }else{
              $.ajax({
                type: "POST",
                url: "/cards/store",
                data:{
                  useridF: $('#useridF').val(),
                  name: name,
                  size:size,
                  price: price,
                  quantityOrder: slorder,
                  img:imgsrc,
                  quantity:slKho,
                }
              });

              swal("Đặt hàng thành công", "Kiểm tra giỏ hàng", "success");
          }   
        }
          

        function openCity(cityName) {
            var i;
            var x = document.getElementsByClassName("city");
            for (i = 0; i < x.length; i++) {
              x[i].style.display = "none";  
            }
            document.getElementById(cityName).style.display = "block";  
          }
 
</script>